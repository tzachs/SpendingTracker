<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonDeleteSpentEnteries"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Delete Spent Entries"/>

    <Button
        android:id="@+id/buttonDeleteReminderTimeEnteries"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Delete Time Reminders"/>
    
    <Button
        android:id="@+id/buttonDeleteReminderLocationEnteries"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Delete Location Reminders"/>
    
    <Button
        android:id="@+id/buttonDbImport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/alertDialogImportDatabaseTitle" />
    
    <Button
        android:id="@+id/buttonDbExport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/alertDialogExportDatabaseTitle" />

</LinearLayout>